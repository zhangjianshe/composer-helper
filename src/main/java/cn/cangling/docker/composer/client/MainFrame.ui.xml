<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:composer="urn:import:cn.cangling.docker.composer.client.composer">
    <ui:style>
        .logo {
            width: 48px;
        }

        .lb {
            font-weight: bold;
            font-size: 1.3rem;
        }

        .top {
            background: linear-gradient(to bottom, skyblue, rgba(0, 255, 0, 0));
        }

        .version {
            color: #808080;
            font-size: 0.9rem;
            margin-top: 4px;
        }</ui:style>
    <g:DockLayoutPanel ui:field="root">
        <g:north size="60">
            <g:HorizontalPanel width="100%" verticalAlignment="middle" spacing="8" styleName="{style.top}">
                <g:cell width="70px">
                    <g:HTML ui:field="logo" styleName="{style.logo}"/>
                </g:cell>
                <g:VerticalPanel horizontalAlignment="left">
                    <g:Label ui:field="lbName" styleName="{style.lb}">Docker Composer Writer</g:Label>
                    <g:Label ui:field="lbVersion" addStyleNames="{style.version}"/>
                </g:VerticalPanel>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
            <composer:ComposerFrame ui:field="composerFrame"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>