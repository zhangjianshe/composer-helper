<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:editor="urn:import:cn.cangling.docker.composer.client.composer.editor">
    <ui:style>
        .box {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .group {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 4px;
            border: solid 1px #e0e0e0;
            border-radius: 5px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="root" styleName="{style.box}">
        <g:HTMLPanel styleName="{style.group}">
            <editor:SvgButton ui:field="btnDelete" />
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>