<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:t="urn:import:cn.cangling.docker.composer.client.composer.editor"
>
    <ui:style>
        .box {
            background-color: green;
        }

        .list {
            display: flex;
            gap: 1rem;
            justify-content: flex-start;
            align-items: center;
            flex-wrap: wrap;
            padding: 1rem;
        }

        .left {
            background-color: #f0f0f0;
        }


    </ui:style>
    <g:DockLayoutPanel ui:field="root">
        <g:west size="300">
            <g:ScrollPanel addStyleNames="{style.left}">
                <g:HTMLPanel ui:field="list" addStyleNames="{style.list}">

                </g:HTMLPanel>
            </g:ScrollPanel>
        </g:west>
        <g:north size="50">
            <g:HorizontalPanel height="100%" verticalAlignment="middle" spacing="4">
                <t:FileToolbar ui:field="fileToolbar"/>
                <t:AlignToolbar ui:field="alignToolbar"/>
            </g:HorizontalPanel>
        </g:north>
        <g:center>
                <t:ComposerEditor ui:field="editor" addStyleNames="{style.box}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>