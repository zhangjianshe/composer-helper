<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:editor="urn:import:cn.cangling.docker.composer.client.composer.editor">
    <ui:style>
        .box {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
        }

        .btn {
            width: 32px;
            height: 32px;
            overflow: hidden;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .btn > svg {
            width: 28px;
            height: 28px;
        }
        .btn > svg > *{
            fill: #808080;
        }
        .btn:HOVER > svg > *{
            fill: brown;
        }

        .group {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 4px;
            border: solid 1px #e0e0e0;
            border-radius: 5px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="root" styleName="{style.box}">
        <g:HTMLPanel styleName="{style.group}">
            <editor:SvgButton ui:field="btnOpen" />
            <editor:SvgButton  ui:field="btnSave" />
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>